@model Todo

<div class="container mt-4">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-secondary">
					<h2>Edit task</h2>
				</div>
				<div class="card-body">
					<form asp-action="EditTodo" method="post">
						<div class="form-group mb-3">
							<label asp-for="Taskname" class="form-label">
								Task Name
							</label>
							<input asp-for="Taskname" class="form-control" placeholder="Enter new task..." />
							<span asp-validation-for="Taskname" class="text-danger"></span>
						</div>
						<div class="form-group mb-3">
							<label asp-for="DateCreated" class="form-label">
								Date
							</label>
							<input asp-for="DateCreated" class="form-control" type="date" />
							<span asp-validation-for="DateCreated" class="text-danger"></span>
						</div>
						<div class="d-flex justify-content-between">
							<button class="btn btn-primary" type="submit">Edit</button>
							<a asp-controller="TodoEntries" asp-action="Index" class="btn btn-secondary">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
